{
  "manifest_version": 3,
  "name": "Quick Translator",
  "version": "1.0",
  "description": "Translate selected text to desired language",
  "permissions": [
    "storage",
    "clipboardWrite",
    "scripting",
    "contextMenus",
    "activeTab"
  ],
  "host_permissions": [
    "https://translate.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "action": {
    "default_popup": "options.html"
  }
}